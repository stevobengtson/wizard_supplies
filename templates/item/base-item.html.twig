<div class="card" style="width: 20rem;">
  <div class="card-header">{{ item.title }}<span class="float-right">${{ item.price|number_format(2, '.', ',') }}</span></div>
  <img class="card-img-top" src="{{ asset('uploads/items/' ~ item.image) }}" alt="{{ item.title }}" height="240">
  <div class="card-body">
    <p class="card-text">{{ item.description }}</p>
  </div>
  <div class="card-footer">
    <div class="text-right">
      {% block actions %}{% endblock %}
    </div>
  </div>
</div>
