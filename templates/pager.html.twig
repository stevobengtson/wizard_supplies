<div class="row">
  <div class="col-md-12">
    <nav>
      {% if totalPages > 1 %}
      <ul class="pagination">
        <li class="page-item{{ page == 1 ? ' disabled' }}">
          <a class="page-link" href="{{ path(pageUrl, {page: page - 1 < 1 ? 1 : page - 1}) }}">Previous</a>
        </li>

        {# Render each page number #}
        {% for i in 1..totalPages %}
        <li class="page-item{{ page == i ? ' active' }}">
          <a class="page-link" href="{{ path(pageUrl, {page: i}) }}">{{ i }}</a>
        </li>
        {% endfor %}

        <li class="page-item{{ page == totalPages ? ' disabled' }}">
          <a class="page-link" href="{{ path(pageUrl, {page: page + 1 <= totalPages ? page + 1 : page}) }}">Next</a>
        </li>
      </ul>
      {% endif %}
    </nav>
  </div>
</div>