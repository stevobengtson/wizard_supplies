{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row">
  <div class="col-md-4 offset-md-4">
    <form action="{{ path('session_login') }}" method="post">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Sign In</h3>
        </div>
        <div class="panel-body">
          <form role="form">
            <fieldset>
              <div class="form-group">
                <input type="text" id="username" name="_username" value="{{ email }}" class="form-control" placeholder="E-mail"/>
              </div>
              <div class="form-group">
                <input type="password" id="password" name="_password" class="form-control" placeholder="Password"/>
              </div>
              <button class="btn btn-success" type="submit">login</button>
            </fieldset>
          </form>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
